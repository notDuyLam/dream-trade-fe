{
  "name": "next-js-boilerplate",
  "author": "Ixartz (https://github.com/ixartz)",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev:spotlight": "npx @spotlightjs/spotlight",
    "dev:next": "next dev",
    "dev": "npm-run-all --parallel dev:*",
    "build:next": "next build --webpack",
    "build": "npm run build:next",
    "start": "next start",
    "build-stats": "cross-env ANALYZE=true npm run build",
    "clean": "rimraf .next out coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "check:types": "tsc --noEmit --pretty",
    "check:deps": "knip",
    "commit": "commit",
    "test": "vitest run",
    "test:e2e": "playwright test",
    "storybook": "storybook dev -p 6006",
    "storybook:test": "vitest run --config .storybook/vitest.config.mts",
    "build-storybook": "storybook build",
    "dev:ws": "node realtime-server/index.js"
  },
  "dependencies": {
    "@arcjet/next": "^1.1.0",
    "@clerk/localizations": "^3.35.3",
    "@clerk/nextjs": "^6.37.3",
    "@hookform/resolvers": "^5.2.2",
    "@logtape/logtape": "^1.3.7",
    "@react-oauth/google": "^0.13.4",
    "@sentry/nextjs": "^10.38.0",
    "@t3-oss/env-nextjs": "^0.13.10",
    "@tanstack/react-query": "^5.90.20",
    "cookie-parser": "^1.4.7",
    "lightweight-charts": "^5.1.0",
    "next": "^16.1.6",
    "posthog-js": "^1.342.1",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "react-hook-form": "^7.71.1",
    "recharts": "^3.7.0",
    "socket.io": "^4.8.3",
    "socket.io-client": "^4.8.3",
    "zod": "^4.3.6",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.7.3",
    "@chromatic-com/playwright": "^0.12.8",
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@commitlint/prompt-cli": "^20.4.1",
    "@eslint-react/eslint-plugin": "^2.12.1",
    "@faker-js/faker": "^10.3.0",
    "@next/bundle-analyzer": "^16.1.6",
    "@next/eslint-plugin-next": "^16.1.6",
    "@playwright/test": "^1.58.2",
    "@spotlightjs/spotlight": "4.10.0",
    "@storybook/addon-a11y": "^10.2.7",
    "@storybook/addon-docs": "^10.2.7",
    "@storybook/addon-vitest": "^10.2.7",
    "@storybook/nextjs-vite": "^10.2.7",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/cookie-parser": "^1.4.10",
    "@types/node": "^24.10.11",
    "@types/react": "^19.2.13",
    "@types/recharts": "^1.8.29",
    "@vitejs/plugin-react": "^5.1.3",
    "@vitest/browser": "^4.0.18",
    "@vitest/browser-playwright": "^4.0.18",
    "@vitest/coverage-v8": "^4.0.18",
    "babel-plugin-react-compiler": "^1.0.0",
    "checkly": "^6.9.10",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.2",
    "eslint-plugin-format": "^1.4.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-playwright": "^2.5.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.5.0",
    "eslint-plugin-storybook": "^10.2.7",
    "eslint-plugin-tailwindcss": "^4.0.0-beta.0",
    "knip": "^5.83.1",
    "lefthook": "^2.1.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "postcss-load-config": "^6.0.1",
    "rimraf": "^6.1.2",
    "semantic-release": "^25.0.3",
    "storybook": "^10.1.4",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.15",
    "vitest-browser-react": "^2.0.5"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits"
        }
      ],
      "@semantic-release/release-notes-generator",
      "@semantic-release/github"
    ]
  }
}
